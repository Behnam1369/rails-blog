<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice.to_s != '' %>
      <div class="notice"><%= notice %></div>
    <% end %>
    <% if alert.to_s != '' %>
      <div class="alert"><%= alert %></div>
    <% end %>
    <% if user_signed_in? %>
      <div class="app_layout_header">Welcome <b><%= current_user.name %></b> | 
      <%= button_to "Log out", 
            destroy_user_session_path, 
            method: :delete,
            data: { turbo: false },
            class:'link' %>
      </div>
    <% end %>
    <div class="layout"><%= yield %></div>
    
  </body>
</html>
